{
    "compilerOptions":{
        "module": "NodeNext",
        "target": "es2016",
        "moduleResolution":"NodeNext",
        "baseUrl": "src",
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny":true,
        "strict": true,
        "esModuleInterop": true,   
        "experimentalDecorators": true,
        "skipLibCheck": true ,
        "typeRoots": ["./node_modules/@types"] ,
    },
    
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}